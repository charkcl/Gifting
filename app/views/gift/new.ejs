<div class="landing">
  <div class="white-box">
    <h2 class="text-center">Add your gift idea!</h2>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form method="post" action="/gifts">
      <div class="form-group">
        <label for="name" class="h5">Name</label>
        <input class="form-control" type="text" name="gift[name]">
      </div>

      <div class="form-group">
        <label for="shop" class="h4">shop</label>
        <input class="form-control" type="shop" name="gift[shop]" id="shop">
      </div>

      <div class="form-group">
        <label for="description" class="h5">Description</label>
        <input class="form-control" type="text" name="gift[description]">
      </div>

      <div class="form-group">
        <label for="tags" class="h5">Tag</label>
        <input class="form-control" type="text" name="gift[tags]">
      </div>

      <hr>
      <div class="form-group text-center">
      <input class="btn btn-info h2" type="submit" value="Add">
      </div>
    </form>
  </div>
</div>