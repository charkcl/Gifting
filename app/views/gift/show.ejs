<div class="container" id="gift-single">

  <div class="gift-show-box">
    <div class="text-center h3">
      <form id="add-list" method = "POST">
        <input id="list-recipient" type="text" name="list[recipients]" placeholder="recipients">
        <input id="list-quantity" type="number" name="list[quantity]" placeholder="quantity" min="1">
        <input class="btn btn-success" type ="submit" value="Add to myList">
      </form>
      <form id="delete-gift" method = "POST">
        <a href="/gifts" class="btn btn-warning"> Sell all gifts </a>
        <a href="/gifts/new" class="btn btn-primary"> Got another gift idea? </a>
        <button type ="submit" class="btn btn-link icon ion-trash-a"></button>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/gift/show.js"></script>