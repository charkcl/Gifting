<div class="landing">
  <div class="white-box">
    <h2 class="text-center">Sign up to add gift ideas!</h2>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form method="post" action="/signup">
      <div class="form-group">
        <label for="email" class="h4">Email</label>
        <input class="form-control" type="text" name="email" id="email">
      </div>

      <div class="form-group">
        <label for="email" class="h4">Password</label>
        <input class="form-control" type="password" name="password" id="password">
      </div>

      <div class="form-group text-center">
      <input class="btn btn-success h2" type="submit" value="Sign-up">
      </div>
    </form>
    <hr>
    <div class="text-center">
    <a href="/auth/facebook"><img src="img/fblogin.png" id="fb-login"></a>
    </div>

    <div class="text-center">
      Already have an account? <a href="/signin">Log in</a> here!
    </div>
  </div>
</div>